<h1>Movie Recommendations</h1>

<%= form_tag movies_path, :method => 'get' do %>
<%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" %>
<% end %>


<% @movies.each do |movie| %>
     <div class="row">
        <%= image_tag(movie.image_uri, alt: "Movie picture", class: "movie-image") %>
    </div>
    
    <div>
        <h4><%= link_to movie.title, movie_path(movie) %></h4><br>
    </div>

<% end %>
